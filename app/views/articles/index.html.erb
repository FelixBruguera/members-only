<%= stylesheet_link_tag 'index' %>
<h1>Articles</h1>
<% if user_signed_in? %>
    <p><%= link_to 'Log out', destroy_user_session_path, :method => :delete, id:'session' %></p>
<% else %>
    <p id='session'><%= link_to 'Sign in', new_user_session_path, id:'session'%></p>
    <p id='session'><%= link_to 'Sign up', new_user_path, id:'session'%></p>
<% end %>
<ul>
    <% @articles.each do |article| %>
        <li>
            <div id='article-title'><%= link_to article.title, article %></div>
            <p ><%= article.body %></p>
        </li>
  <% end %>
</ul>
<% if user_signed_in? %>
<p id='new'><%= link_to "New Article", "articles/new/"+current_user.id.to_s %></p>
<% end %>